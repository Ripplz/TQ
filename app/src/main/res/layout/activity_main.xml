<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="100dp">

        <Button
            android:id="@+id/top_Butt"
            android:layout_width="104dp"
            android:layout_height="31dp"
            android:background="@android:color/background_light"
            android:text="@string/button_textInvite"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            android:typeface="normal" />

    </LinearLayout>


    <TextView
        android:id="@+id/anim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/text_transition"
        android:typeface="monospace" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/card_layoutWidth"
        android:layout_height="@dimen/card_layoutHeight"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="@dimen/card_cornerRadius"
        app:cardElevation="@dimen/card_elevation"
        app:contentPadding="@dimen/card_contentPadding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>